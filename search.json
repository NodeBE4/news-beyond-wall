---
layout: null
---

[
  {% for post in site.posts %}
    {
      "title"    : "{{ post.title | strip_newlines | escape }}",
      "category" : "{{ post.categories[1] }}",
      "tags"     : "{{ post.tags | join: ', ' }}",
      "url"      : "{{ site.baseurl }}{{ post.url }}",
      "date"     : "{{ post.date }}",
      "description" : "{{ post.excerpt | strip_html | strip_newlines | escape }}"
    } {% unless forloop.last %},{% endunless %}
  {% endfor %}
]
